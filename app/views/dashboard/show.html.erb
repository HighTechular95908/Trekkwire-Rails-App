<div class="absolute inset-x-0 top-[-10rem] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[-20rem]" aria-hidden="true">
  <div class="relative left-1/2 -z-10 aspect-[1155/678] w-[36.125rem] max-w-none -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-30 sm:left-[calc(50%-40rem)] sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
</div>
<div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
  <div class="my-8">
    <% if current_account.customer_type == "traveler" %>
      <div class="mx-auto max-w-7xl px-4 py-10 sm:px-6 lg:px-8">
        <div class="mx-auto flex max-w-2xl items-center justify-between gap-x-8 lg:mx-0 lg:max-w-none">
          <div calss="flex items-center gap-x-6">
            <h3 class="hidden text-xl font-semibold leading-6 text-gray-900 sm:block"><%= t(".title_traveler") %></h3>
          </div>
          <div>
            <%= link_to "Interested in becoming a guide?", become_a_guide_path, class: "rounded bg-indigo-50 px-2 py-1 text-xs font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100"%>
          </div>
        </div>
      </div>
      <div data-controller="user-map" data-action="google-maps-callback@window->user-map.initializeMap" class="-m-2 rounded-xl bg-opacity-50 bg-gray-900/5 p-2 ring-1 ring-inset ring-gray-900/10 lg:-m-4 lg:rounded-2xl lg:p-4">
        <div class="flex flex-1 items-center justify-center py-2 lg:justify-start">
          <div class="w-full max-w-lg lg:max-w-xs">
            <label for="search" class="sr-only">Search</label>
            <div class="relative">
              <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
                </svg>
              </div>
              <input data-user-map-target="field" id="search" name="search" class="block w-full rounded-md border-0 bg-white py-1.5 pl-10 pr-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Search" type="search">
            </div>
          </div>
        </div>
        <div data-user-map-target="map" class="row-span-1 flex min-h-[40vh] min-w-fit qA rounded-xl bg-gray-900/5 p-2 ring-1 ring-inset ring-gray-900/10 "></div>
        <table class="w-full">
          <tbody>
            <tr class="border-t border-gray-100 group">
              <td class="p-10">
                <%= turbo_frame_tag "guides", src: page_list_path , data: { turbo_action: :advance } do %>
                  <div>
                    Loading accounts ...
                  </div>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <% if @pagy.pages > 1 %>
        <div class="my-6 text-center">
          <%== pagy_nav(@pagy) %>
        </div>
      <% end %>

    <% else %>
      <h1 class="mt-3 text-3xl font-extrabold tracking-tight text-slate-900"><%= t(".title_guide") %></h1>
      <% unless current_account.approved %>
        <%= badge t(".not_approved"), class: "bg-red-100 text-red-800 text-xs font-medium" %>
        <a href = "mailto: support@trekkwire.com" class="rounded bg-indigo-50 px-2 py-1 text-xs font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100">Email Support</a>
      <% end %>
      <% unless current_account.active %>
        <div class="my-2">
          <%= badge t(".not_active"), class: "bg-red-100 text-red-800 text-xs font-medium" %>
          <%= link_to "Activate account", edit_account_path(current_account), class: "rounded bg-indigo-50 px-2 py-1 text-xs font-semibold text-indigo-600 shadow-sm hover:bg-indigo-100"%>
        </div>
      <% end %>
      <div class="my-2"><%= badge "Current Account: " + current_account.name %></div>
      <div class="my-10">
        <%= render partial: 'dashboard/guide_dashboard' %>
      </div>
    <% end %>
  </div>
</div>