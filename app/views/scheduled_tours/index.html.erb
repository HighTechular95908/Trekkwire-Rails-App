<%= content_for :title, "Scheduled Tours" %>
<%= turbo_stream_from :scheduled_tours %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Scheduled Tours</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500">Sort by:</span>
        <%= sortable @scheduled_tours, :scheduled_date, "Scheduled date", class: "text-gray-700 mr-1" %>
        <%= sortable @scheduled_tours, :scheduled_time, "Scheduled time", class: "text-gray-700 mr-1" %>
        <%= sortable @scheduled_tours, :location, "Location", class: "text-gray-700 mr-1" %>
        <%= sortable @scheduled_tours, :tour_id, "Tour", class: "text-gray-700 mr-1" %>
        <%= sortable @scheduled_tours, :account_user_id, "Account user", class: "text-gray-700 mr-1" %>
      </div>
    </div>

    <%= link_to t("shared.scaffold.new.title", model: "Scheduled Tour"), new_scheduled_tour_path, class: "btn btn-white" %>
  </div>

  <%= tag.div id: ("scheduled_tours" if first_page?), class: "bg-white rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "scheduled_tours/index", collection: @scheduled_tours, as: :scheduled_tour, cached: true %>

    <div class="hidden only:flex flex-col items-center justify-between lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="mb-4 h3">Create your first Scheduled Tour</p>
        <%= link_to t("shared.scaffold.new.title", model: "Scheduled Tour"), new_scheduled_tour_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
